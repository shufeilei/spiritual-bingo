/ Navigation
%nav.navbar.navbar-expand-lg.navbar-light.bg-light.text-uppercase
  .container
    =link_to '/', class: 'navbar-brand js-scroll-trigger' do
      = image_tag 'favicon.ico', width: '30px'
      IUSM
    %button.navbar-toggler.navbar-toggler-right{'aria-controls' => 'navbarResponsive', 'aria-expanded' => 'false', 'aria-label' => 'Toggle navigation', 'data-target' => '#navbarResponsive', 'data-bs-toggle' => 'collapse', type: 'button'}
      Menu
      %i.fa.fa-bars
    #navbarResponsive.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item
          .dropdown
            = link_to '#', class: 'btn btn-secondary dropdown-toggle',
              id: 'dropdownMenuLink', data: { bs_toggle: 'dropdown' },
              'aria-haspopup' => 'true', 'aria-expanded' => 'false' do
              = user_signed_in? ? current_user.username : 'Member'
            .dropdown-menu.dropdown-menu-right{'aria-labelledby' => 'dropdownMenuButton'}
              - if user_signed_in?
                .dropdown-item=link_to 'Summer Challenge', boards_path
                - if current_user.board
                  .dropdown-item=link_to 'My game board', board_path(current_user.board)
                .dropdown-item=link_to 'My profile', user_path(current_user)
                .dropdown-item=link_to 'Sign out', destroy_user_session_path
              - else
                .dropdown-item=link_to 'Sign in', new_user_session_path
